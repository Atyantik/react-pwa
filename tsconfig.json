{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "esnext", "dom.iterable", "scripthost", "es2015.promise"],
    "module": "amd",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/dist/**/*",
    "src/__tests__/**",
  ]
}
