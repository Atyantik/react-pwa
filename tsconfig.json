{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "esnext", "dom.iterable", "scripthost", "es2015.promise"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@resources/*": ["resources/*"],
      "@hooks/*": ["hooks/*"],
      "@routes/*": ["routes/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/dist/**/*",
    "src/__tests__/**"
  ]
}
